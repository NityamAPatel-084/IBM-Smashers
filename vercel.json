{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/analyze",
            "dest": "server/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ]
}